<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AnswerButtonStyle">
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">15sp</item>
        <item name="android:autoSizeMinTextSize">15sp</item>
        <item name="android:autoSizeMaxTextSize">20sp</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="AnswerButtonStyle.FirstAnswer">
        <item name="android:layout_marginEnd">@dimen/answer_button_default_margin</item>
        <item name="android:layout_marginTop">@dimen/answer_button_default_margin</item>
        <item name="android:layout_marginBottom">@dimen/answer_button_wide_margin</item>
    </style>

    <style name="AnswerButtonStyle.SecondAnswer">
        <item name="android:layout_marginStart">@dimen/answer_button_default_margin</item>
    </style>

    <style name="AnswerButtonStyle.ThirdAnswer">
        <item name="android:layout_marginBottom">@dimen/quiz_bottom_margin</item>
    </style>

    <style name="Logo">
        <item name="android:layout_marginTop">@dimen/logo_margin</item>
    </style>

    <style name="Chart">
        <item name="android:textColor">@color/darkBlue</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="Chart.Number">
        <item name="android:layout_marginStart">@dimen/chart_number_start_margin</item>
    </style>

    <style name="Chart.User">
        <item name="android:layout_marginStart">@dimen/username_start_margin</item>
    </style>

    <style name="Chart.Score">
        <item name="android:layout_marginEnd">@dimen/score_end_margin</item>
    </style>

    <style name="Chart.Achievement">
        <item name="android:layout_marginBottom">@dimen/achievement_bottom_margin</item>
    </style>

    <style name="QuizFinishedTitle">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/text_size_biggest</item>
        <item name="android:textColor">@color/darkBlue</item>
    </style>

    <style name="QuizFinished">
        <item name="android:layout_marginStart">@dimen/answer_button_default_margin</item>
        <item name="android:layout_marginEnd">@dimen/answer_button_default_margin</item>
    </style>

    <style name="QuizFinished.Retry">
        <item name="android:layout_marginBottom">@dimen/answer_button_default_margin</item>
    </style>

    <style name="QuizFinished.HomeButton">
        <item name="android:layout_marginBottom">@dimen/quiz_finished_margin_bottom</item>
    </style>

    <style name="QuizTimer">
        <item name="android:layout_margin">@dimen/timer_margin</item>
        <item name="cs_progress">0</item>
        <item name="cs_negative_enabled">true</item>
        <item name="cs_circle_style">butt</item>
        <item name="cs_circle_stroke_width">@dimen/timer_circle_stroke</item>
        <item name="cs_pointer_stroke_width">@dimen/timer_poiter_stroke</item>
        <item name="cs_circle_color">@android:color/transparent</item>
        <item name="cs_circle_progress_color">@color/colorPrimary</item>
        <item name="cs_disable_progress_glow">true</item>
    </style>

    <style name="QuizIndicator">
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="QuizText">
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textColor">@color/darkBlue</item>
        <item name="android:layout_margin">@dimen/quiz_text_margin</item>
    </style>

    <style name="Username">
        <item name="android:textColor">@color/darkBlue</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Username.EditText">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:layout_margin">@dimen/answer_button_default_margin</item>
        <item name="android:textColorHint">@android:color/tertiary_text_light</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="ButtonDefault">
        <item name="android:padding">@dimen/answer_button_default_margin</item>
        <item name="android:layout_margin">@dimen/answer_button_default_margin</item>
    </style>

    <style name="Home">
        <item name="android:textColor">@color/darkBlue</item>
    </style>

    <style name="Home.Score">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:layout_marginTop">@dimen/margin_20</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Home.Username">
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:layout_margin">@dimen/margin_20</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="GoBackButton">
        <item name="android:layout_marginBottom">@dimen/chart_button_margin_bottom</item>
    </style>

    <style name="ChartRecycler">
        <item name="android:layout_marginBottom">@dimen/chart_margin_bottom</item>
        <item name="android:layout_marginTop">@dimen/chart_margin_top</item>
    </style>

    <style name="Progress">
        <item name="android:indeterminateTint">@color/darkBlue</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>